<h2>Crusade</h2>

{{#if crusadeList.length}}
{{#each crusadeList}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{inquisitor.name}}</span>
                <ul>
                    {{#each recruit}}
                    <li>
                        <p>{{spacemarine.name}} (x{{count}})</p>
                    </li>
                    {{/each}}
                </ul>
                <hr>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<h3>Заказов нет</h3>
{{/if}}