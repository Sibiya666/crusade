{{#if platoonList.length}}
<h2>Доступны</h2>
<div class="row">
    {{#each platoonList}}

    <div class="col s12 m3">
        <article class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator spacemarine-photo" src="{{photo}}" title="{{name}}">
            </div>
            <div class="card-content">
                    <span class="card-title grey-text text-darken-4">Name: {{name}}</span>
                    <span>Platoon id: {{platoonId}}</span>
                    <span>Cost: {{cost}}</span>
            </div>
            <div class="card-action flex-inline">
                <a href="/platoon/{{_id}}">Bio</a>
                {{#if @root.isAuth}}
                    {{#ifeq inquisitorId @root.inquisitorId}}
                        <a href="/platoon/{{_id}}/workout?allow=true">Worckout</a>
                    {{/ifeq}}
                    <form action="/recruit/add" method="POST">
                        <input type="text" value="{{@root.csrfToken}}" name="_csrf" hidden>
                        <input type="text" name="id" value="{{_id}}" hidden>
                        <button class="btn">Recruit</button>
                    </form>
                {{/if}}
            </div>
        </article>
    </div>

    {{/each}}
</div>
{{else}}
<h2>Все на Кабале</h2>
{{/if}}