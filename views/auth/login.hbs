<h2>Login</h2>

<div class="row">
    <div class="col s6 offset-s3">
        <ul class="tabs">
            {{#if isAuth}}
                <li class="tab col s6"><a class="active" href="#auth">Auth</a></li>
                <li class="tab col s6"><a href="#registration">Registration</a></li>
            {{else}}
                <li class="tab col s6"><a  href="#auth">Auth</a></li>
                <li class="tab col s6"><a class="active" href="#registration">Registration</a></li>
            {{/if}}
        </ul>
    </div>

    {{!-- AUTH --}}
    <div id="auth" class="col s6 offset-s3">
        {{#if errorAuth}}
            <p class="alert">{{errorAuth}}</p>
        {{/if}}

        <form action="/login/auth" method="POST">
            <div class="input-field">
                <input id="login" name="login" type="text" class="validate" required>
                <label for="login">Login</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="text" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <input type="text" value="{{csrfToken}}" name="_csrf" hidden>
            
            <p>
                <a href="/login/reset">Forgot password?</a>
            </p>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right"></i>
            </button>
        </form>
    </div>

    {{!-- REGISTRATION --}}
    <div id="registration" class="col s6 offset-s3">

        {{#if errorReg}}
            <p class="alert">{{errorReg}}</p>
        {{/if}}

        <form action="/login/registration" method="POST">
            <div class="input-field">
                <input id="login" name="login" type="text" class="validate" value="{{login}}" required>
                <label for="login">Login</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" value="{{name}}" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="email" name="email" type="text" class="validate" value="{{email}}" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="text" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="repeat-password" name="repeatPassword" type="text" class="validate" required>
                <label for="repeat-password">Repeat Password</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <input type="text" value="{{csrfToken}}" name="_csrf" hidden>
            
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right"></i>
            </button>
        </form>
    </div>
</div>