<h2>login</h2>

<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s3"><a href="#auth">Auth</a></li>
            <li class="tab col s3"><a class="active" href="#registration">Registration</a></li>
        </ul>
    </div>
    <div id="auth" class="col s12">
        <form action="/login/auth" method="POST">
            <div class="input-field">
                <input id="login" name="login" type="text" class="validate" required>
                <label for="login">Login</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="text" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right"></i>
            </button>
        </form>
    </div>
    <div id="registration" class="col s12">
        <form action="login/registration" method="POST">
            <div class="input-field">
                <input id="login" name="login" type="text" class="validate" required>
                <label for="login">Login</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="text" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <div class="input-field">
                <input id="repeat-password" name="repeatPassword" type="text" class="validate" required>
                <label for="repeat-password">Repeat Password</label>
                <span class="helper-text" data-error="wrong" data-success="right">required field</span>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right"></i>
            </button>
        </form>
    </div>
</div>